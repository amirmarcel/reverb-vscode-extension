{
  "name": "reverb-vs-code-extension",
  "displayName": "reVerb VS Code extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:reVerb",
    "onView:paths"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.testRoute",
        "title": "Test Endpoint"
      },
      {
        "command": "extension.configRoute",
        "title": "Configure Endpoint"
      },
      {
        "command": "extension.startExtension",
        "title": "VsCode React extension"
      },
      {
        "command": "splitDown",
        "title": "reVerb Config"
      },
      {
        "command": "getState",
        "title": "get state"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "extension.testRoute",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "splitDown",
          "group": "navigation@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reverb-explorer",
          "title": "reverb",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "reverb-explorer": [
        {
          "id": "paths",
          "name": "paths",
          "contextualTitle": "paths"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && gulp",
    "postinstall": "npm install --global gulp-cli && npm i -g webpack@4.44.1 npm i -g webpack-cli@3.3.12 && cd react-app && npm install"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.19.6",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "gulp": "^4.0.2",
    "prettier": "npm:@btmills/prettier@^2.1.2",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@types/estree": "0.0.45",
    "@typescript-eslint/types": "^4.8.1",
    "axios": "^0.21.0",
    "estree-walker": "^2.0.1",
    "find-process": "^1.4.4",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "node-sass": "^5.0.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "sass-loader": "^10.1.0",
    "vscode-test": "^1.4.0",
    "webpack-cli": "^3.3.12"
  }
}
